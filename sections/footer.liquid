  }
  .w30 .save-txt {
    margin-bottom: 4px;
  }
  .copy-div{
    margin-bottom: 9px;
  }
  .w70  .thank-msg {
    font-weight: bold;
    margin-bottom: 4px;
    font-size: 20px;
  }
