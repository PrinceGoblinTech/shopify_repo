{% if settings.coupan != '' %}
    <style>

 .coupon-code div {
    min-height: 63px;
  }

  .w70  input {
    padding: 0;
    display: inline-block;
    width: 24%;
    border: 0;
    background: transparent;
    padding-left: 3px;
    z-index: -1;
  }

  .w70 {
    width: 70%;
    float: left;
    background: #fff;
    color: #000;
  }

  .w30 {
    width: 30%;
    float: right;
    background: #41c54f;
    border-style: dotted;
    border-right: 0;
    border-top: 0;
    border-bottom: 0;
  }
  .coupon-code div{
    padding:10px 0px 0px 10px;
  }

  .w70  p {
    color: #414141;
    font-size: 16px;
