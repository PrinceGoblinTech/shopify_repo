	<footer class="container-fluid">
      {% if settings.footer_second_row_display %}
		<div class="row footer">
			<div class="container">
				<div class="{% if settings.footer_checkout_display %}col-md-3{% else %} col-md-4 {% endif %} equal no-padding">
                  {% if settings.newslatter_form_show %}
                    <div class="footer-newsletter">
                      <h3>{{ settings.newslatter_heading }}</h3>
                      {% if settings.newslatter_type == "mailchimp" %}
                        <form action="{{settings.mailchimpURL}}/subscribe/post-json?u={{settings.mailchimpUID}}&amp;id={{settings.mailchimpID}}&c=?" method="get" class="contact-form mailing-form mailchimpajax mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
                          <div class="form-group clearfix">
                            <input required type="email" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" id="ccontact_email"  class="form-ccontrol newsletter ajaxtext" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
                            <button type="submit" class="btan btn-success ajxbtn">{{ settings.newslatter_btn_text }}</button>
                          </div>
                        </form>
                           <div id="subscriberesult">
                </div>
                      {% elsif settings.newslatter_type == "klaviyo" %}
                        {% include 'klaviyo' %}
                      {% else %}
                        {% form 'customer', id: null %}
                          {{ form.errors | default_errors }}
                          {% if form.posted_successfully? %}
                              {% assign posted_successfully = true %}
                            <div class='coupon-code'>
                              <div class='w70'><p class='thank-msg'> {{ settings.newslatter_coupan }} </p>
                                {% if settings.coupan != '' %}  
                                <p class='coupon-text'>{{ 'layout.coupon_code.text' | t }}<input type="text" value="{{ settings.coupan }}" id="coupan_code_copy"></p>
                                {% endif %}
                              </div>
                              {% if settings.coupan != '' %} 
                              <div class='w30'><p class='save-txt'>{{ 'layout.coupon_code.save' | t }}</p><p class='copy-div'><span class="button_copy_code">{{ 'layout.coupon_code.copy_code' | t }}</span></p></div>
                              {% endif %} 
                            </div>
                          {% else %}
                            <div class="form-group clearfix">
                              <input required type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" id="coupon_Email" class="form-ccontrol newsletter"  aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
                              <input type="hidden" name="contact[tags]" value="newsletter">
                              <button type="submit" name="ft" class="btan btn-success">{{ settings.newslatter_btn_text }}</button>
                            </div>  
                          {% endif %}
                        {% endform %}
                      {% endif %}
                      {% unless posted_successfully %}
                          {% if settings.termscheck %}
                            <label class="checkbox-wrapper" for="termsCheck"><input class="terms-check-input" type="checkbox" id="termsCheck"> {{ settings.termstext }} <a target="_blank" href="{{ settings.termstextlink }}">&nbsp{{ settings.termslinktext }}</a></label>
                            <script>
                              $('body').on('click', '[name="ft"]', function() {
                                if ($('#termsCheck').is(':checked')) {
                                  $(this).submit();
                                } else {
                                  alert("{{ settings.termstext_warning }}");
                                   return false;
                                }
                              });
                            </script>
                          {% endif %}
                      {% endunless %}
                      <p><i>{{ settings.newslatter_text }}</i></p>
					</div>
                  {% endif %}
				</div>
				<div class="{% if settings.footer_checkout_display %} col-md-3 {% else %} col-md-4 {% endif %}  equal footer_link">
					<div class=" ">
                      
						<div class="clearfix">
							<ul >
							 {% for link in linklists[settings.footer_linklist].links %}
                              
