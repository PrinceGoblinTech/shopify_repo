<div class="container-fluid product_wrap header-space js-product_section" data-no-instant
data-rv-handle="{{ product.handle }}">

<div class="row" itemscope itemtype="http://schema.org/Product">
    {% if settings.productreview == 'loox' %}
    {% if product.metafields.loox.num_reviews %}
    <div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
        <meta itemprop="ratingValue" content="{{ product.metafields.loox.avg_rating }}"/>
        <meta itemprop="ratingCount" content="{{ product.metafields.loox.num_reviews }}"/>
    </div>
    {% endif %}
    {% endif %}
    {% assign current_variant = product.selected_or_first_available_variant %}
    <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
    <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">
    <meta itemprop="brand" content="{{ product.vendor }}"/>
    <meta itemprop="priceCurrency" content="{{ shop.currency }}">
    <meta itemprop="price" content="{{ product.price |money_without_currency  |strip_html }}">
    <meta itemprop="sku" content="{{ current_variant.sku }}">
    <!-- review micro data-->
    <div itemprop="review" itemscope itemtype="http://schema.org/Review">
        <meta itemprop="datePublished" content="2011-03-25">
        <div itemprop="reviewRating" itemscope itemtype="http://schema.org/Rating">
            <meta itemprop="worstRating" content="1"/>
            <meta itemprop="bestRating" content="5"/>
        </div>
    </div>

    <div class="container product-single">
        <div class=" rela ">
            {% include 'breadcrumb' %}
            {% if settings.social_sharing_products_mobile %}
            {% include 'social-sharing-mobile' %}
            {% endif %}
        </div>
        <div class="detailwrap">
            <div class="clearfix">
                <div class="col-lg-6 col-md-6 col-sm-12 clearfix product--images {% if settings.product_thumbnails == 'Left' %}thumb-left {% endif %} {% if settings.hide_thumb_on_mobile %} hideinmobile {% endif %}">
                    <div class="product-single__photos row ">

                        {% if settings.badges_enable_product %}
                        {% include 'badges' %}
                        {% endif %}
                        <ul class="bxslider" id="bxslider-id-{{ product.id }}">
                            {% assign i = 0 %}
                            {% for image in product.images %}
                            {% unless image.alt contains "facebook-meta" %}
                            <li>
                                {% if settings.video_embading %}
                                {% if image.alt contains "youtube" or image.alt contains "vimeo" %}
                                <a data-index-slide="{{ i }}" class="fancybox fancybox.iframe"
                                data-fancybox-group="product-gallery" href="{{ image.alt | escape }}">
                                {% else %}
                                <a {% if forloop.index == 1 %} id="Zoom-1" data-image="{{ image.src | img_url: 'original' }}" data-options="{% unless settings.hintonoff %}hint: off; {% endunless %}{% unless settings.zoommodeonoff %} zoomMode: off; {% endunless %}zoomPosition: {{ settings.zoommode }};  {% unless settings.zoomexpand %}expand: off ;{% endunless %} zoomOn: {{ settings.zoomon }};"  class="MagicZoom" data-zoom-id="Zoom-1"{% else %} id="Zoom-1" data-zoom-id="Zoom-1" data-image="{{ image.src | img_url: 'original' }}" class="MagicZoom" data-options=" {% unless settings.zoommodeonoff %} zoomMode: off; {% endunless %}zoomPosition: {{ settings.zoommode }};  {% unless settings.zoomexpand %}expand: off ;{% endunless %} zoomOn: {{ settings.zoomon }};"

                                {% endif %} data-index-slide="{{ i }}"
                                href="{{ image | product_img_url: 'original' }}">
                                {% endif %}
                                {% else %}
                                <a data-zoom-id="Zoom-1"

                                data-image="{{ image.src | img_url: 'original' }}"
                                data-options="{% unless settings.hintonoff %} hint: off ;{% endunless %}{% unless settings.zoommodeonoff %} zoomMode: off; {% endunless %}zoomPosition: {{ settings.zoommode }};  {% unless settings.zoomexpand %}expand: off ;{% endunless %} zoomOn: {{ settings.zoomon }};"
                                class="MagicZoom" data-index-slide="{{ i }}" class="fancybox"
                                data-fancybox-group="product-gallery"
                                href="{{ image | product_img_url: '1024x1024' }}">
                                {% endif %}
                                {% if settings.lazyload %}
                                <img class="magniflier lazy lazyload"
                                src="{{ image | product_img_url: 'x300' }}"
                                data-large="{{ image | product_img_url: '1024x1024' }}"
                                alt="{{ image.alt | escape }}"
                                data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                                data-src="{{ image | product_img_url: 'master' }}"
                                />
                                {% else %}
                                <img class="magniflier"
                                src="{{ image | product_img_url: '1024x1024' }}"
                                data-large="{{ image | product_img_url: '1024x1024' }}"
                                alt="{{ image.alt | escape }}"/>
                                {% endif %}
                                {% if settings.video_embading %}
                                {% if image.alt contains "youtube" or image.alt contains "vimeo" %}
                            </a>
                            {% else %}
                        </a>
                        {% endif %}
                        {% else %}
                    </a>
                    {% endif %}
                </li>
                {% assign i = i | plus: 1 %}
                {% endunless %}
                {% endfor %}
            </ul>
            {% if settings.product_thumbnails == 'Right' or settings.product_thumbnails == 'Left' %}
            <style>
                .social-sharing a {
                    display: inline-block;
                }
            </style>
            {% include 'social-sharing' %}
            {% endif %}
        </div>
        {% if i > 1 %}
        {% if settings.product_thumbnails == 'Right' or settings.product_thumbnails == 'Left'%}
        <div class="myNewWrap">
          {% endif %}
