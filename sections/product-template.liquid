                <img src="{{ 'cart-button-icon.png' | asset_url }}" alt="+"
                class="no-border ratina-img addIcon"/>
                {% endif %}
                {% if free_shipping_product %}
                {% if settings.freeshipping_add_to_cart_button_text != "" %}
                <span class="alz"
                id="AddToCartTextfree">{{ settings.freeshipping_add_to_cart_button_text }}</span>
                {% else %}
                <span id="AddToCartText">{{ 'products.product.add_to_cart' | t }}</span>
                {% endif %}
                {% else %}
                {% if settings.add_to_cart_button_text != "" %}
                <span id="AddToCartText">{{ settings.add_to_cart_button_text }}</span>
                {% else %}
                <span id="AddToCartText">{{ 'products.product.add_to_cart' | t }}</span>
                {% endif %}
                {% endif %}
            </button>
            <button type="submit" name="add" id="AddToCart"
            class="btn btn-success AddToCart_hide_button stickyonebutton AddToCart">
                <div class="sold-out-tooltip">{{ settings.out_of_stock_text }}</div>

                <span id="AddToCartTextsticky">{{ settings.Sticky_add_to_cart_button_text }}</span>
            </button>
        <button type="submit" name="add"
        class="directbuybutton">{{ settings.Sticky_Buy_button_text }}</button>

        {% if settings.atc_to_cart_button %}
        <a type="button" href="/cart" name="add" id="AddToCartA"
        class="btn AddToCartA btn-success AddToCart_show_button"
        style="display: none;">View Cart</a>
        {% endif %}
        {% endif %}
    </div>
</div>
{% endif %}

